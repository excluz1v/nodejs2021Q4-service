{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ESNEXT",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/login"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
